<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.strnisa.rok.slimbox.view.CoffeeController"
      alignment="CENTER" spacing="10">
  <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
  <HBox spacing="10" alignment="CENTER" VBox.vgrow="ALWAYS">
    <Label text="Amount of coffee (USD):"/>
    <TextField fx:id="amountTextField" />
  </HBox>
  <Label text="Thank you for all the coffee!" VBox.vgrow="NEVER"/>
  <Button fx:id="donateButton" text="Buy" onAction="#onDonateButtonPressed" disable="true" VBox.vgrow="NEVER"/>
</VBox>